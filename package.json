{
  "name": "envctl",
  "version": "1.0.0",
  "description": "Environment variable context manager for development workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "envctl": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "shell-integration.sh"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "postbuild": "chmod +x dist/cli.js",
    "test": "jest",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "env",
    "environment",
    "variables",
    "cli",
    "development",
    "context",
    "manager",
    "profiles",
    "dotenv"
  ],
  "author": {
    "name": "Ahmad Ragab",
    "email": "ahmad.ragab@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/envctl.git"
  },
  "homepage": "https://github.com/yourusername/envctl#readme",
  "bugs": {
    "url": "https://github.com/yourusername/envctl/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/fs-extra": "^11.0.2",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
